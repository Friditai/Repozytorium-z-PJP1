#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

void change(char* word)
{
    int i,n = strlen(word);

    for(i=0;i<=n;i++)
    {
        switch(word[i])
        {
        case 'a':
        case 'A':
        case 'b':
        case 'B':
        case 'c':
        case 'C': word[i]='X';
                break;
        case 'd':
        case 'D':
        case 'e':
        case 'E':
        case 'f':
        case 'F': word[i]='Y';
                break;
        }
    }
}

int main()
{
    char wyraz[80];
    printf("Program zmieniajacy pewne okreslone znaki na 'X' i 'Y'\n");
    printf("Napisz wyraz ktory chcesz zmienic:\n");
    scanf("%s",wyraz);
    change(&wyraz);
    printf("Wyraz zmieniony:\n%s",wyraz);

    return 0;
}
