#include <stdio.h>
#include <stdlib.h>

long int silnia(int n)
{
    int i,s=1;
    for(i=1;i<=n;i++)
    {
        s*=i;
    }
    return s;
}

int main()
{
    int a;
    long int wynik;
    do
    {
    printf("Podaj liczbe:\n");
    scanf("%i",&a);
    } while(a<0);
    wynik=silnia(a);
    printf("Silnia podanej liczby to %li",wynik);
    return 0;
}
